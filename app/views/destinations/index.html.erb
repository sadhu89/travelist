
<div class="sidebar">
	
    <%=form_for(@destination) do |f|%>
        <%= label_tag(:name, "search_icon") do%>
            <div>Div interno</div>
        <%end%>
        <%= f.search_field :name , placeholder: 'Where do you want to go?'%>
        <%= f.submit%>
    <%end%>
    <ul>
        <% @destinations.each do |destination|%>
            <li><%=destination.name.camelize%></li>
        <%end%>
    </ul>
</div>

<div id='map'></div>







